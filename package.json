{
  "name": "discord-player-plus",
  "description": "Library for quickly creating discord music and sound bots using discord.js v14.",
  "version": "1.5.2",
  "packageManager": "pnpm@8.5.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "homepage": "https://discordplayerplus.lars-rickert.de",
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "author": {
    "name": "Lars Rickert",
    "url": "https://lars-rickert.de",
    "email": "dev@lars-rickert.de"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/larsrickert/discord-player-plus"
  },
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc",
    "lint": "tsc --noEmit && eslint --fix src --ignore-path .gitignore",
    "format": "prettier --write src --ignore-path .gitignore",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "test": "vitest --coverage",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "@discordjs/opus": ">= 0.8.0",
    "@discordjs/voice": ">= 0.11.0",
    "discord-api-types": ">= 0.37.0",
    "discord.js": ">= 14.8.0",
    "ffmpeg-static": ">= 5.1.0"
  },
  "dependencies": {
    "deepmerge-ts": "^4.3.0",
    "isomorphic-unfetch": "^3.1.0",
    "libsodium-wrappers": "~0.7.11",
    "music-metadata": "^7.13.4",
    "play-dl": "^1.9.6",
    "spotify-url-info": "^3.2.3",
    "tiny-typed-emitter": "^2.1.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^18.16.8",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vitest/coverage-c8": "~0.29.8",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.2",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.5",
    "vitepress": "1.0.0-alpha.73",
    "vitest": "~0.29.8",
    "vitest-mock-extended": "^1.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write --ignore-path .gitignore"
    ]
  },
  "engines": {
    "node": ">=16.9.0"
  },
  "release": {
    "branches": [
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "keywords": [
    "music",
    "player",
    "bot",
    "discord",
    "discord.js",
    "music"
  ]
}
