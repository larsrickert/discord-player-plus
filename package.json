{
  "name": "discord-player-plus",
  "description": "Library for quickly creating discord music and sound bots using discord.js v14.",
  "version": "2.0.1",
  "packageManager": "pnpm@8.6.10",
  "license": "MIT",
  "homepage": "https://discordplayerplus.lars-rickert.de",
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "author": {
    "name": "Lars Rickert",
    "url": "https://lars-rickert.de",
    "email": "dev@lars-rickert.de"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/larsrickert/discord-player-plus"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "watch": "pnpm run build --watch src",
    "lint": "eslint src --fix --ignore-path .gitignore",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "test": "vitest --coverage",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "@discordjs/opus": ">= 0.8.0",
    "@discordjs/voice": ">= 0.11.0",
    "discord.js": ">= 14.8.0",
    "ffmpeg-static": ">= 5.1.0"
  },
  "dependencies": {
    "deepmerge-ts": "^5.1.0",
    "discord-api-types": "~0.37.50",
    "isomorphic-unfetch": "^4.0.2",
    "libsodium-wrappers": "~0.7.11",
    "music-metadata": "^7.13.4",
    "play-dl": "^1.9.6",
    "spotify-url-info": "^3.2.5",
    "tiny-typed-emitter": "^2.1.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^18.17.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-v8": "^0.33.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.7",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^6.7.0",
    "typescript": "^5.1.6",
    "vitepress": "1.0.0-beta.6",
    "vitest": "~0.33.0",
    "vitest-mock-extended": "^1.1.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.ts": "eslint --fix --ignore-path .gitignore"
  },
  "engines": {
    "node": ">=16.9.0"
  },
  "release": {
    "branches": [
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      },
      {
        "name": "rc",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "keywords": [
    "music",
    "player",
    "bot",
    "discord",
    "discord.js",
    "music"
  ]
}
