  "main": "src/app.ts",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev .",
    "build": "tsc",
    "start": "ts-node .",
    "lint": "tsc --noEmit && eslint --fix src",
    "format": "prettier --write src --ignore-path .gitignore"
