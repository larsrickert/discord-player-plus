{
  "name": "discord-bot-example",
  "description": "Example Discord bot for playing music and sounds written in TypeScript.",
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "start": "node .",
    "lint": "eslint src --fix --ignore-path .gitignore",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "discord-player-plus": "^2.0.0",
    "discord.js": "^14.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^18.17.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^6.7.0",
    "typescript": "~5.1.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.ts": "eslint --fix --ignore-path .gitignore"
  }
}
