{
  "name": "discord-bot-example",
  "description": "Example Discord bot for playing music and sounds written in TypeScript.",
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "start": "node .",
    "lint": "eslint src --fix --ignore-path .gitignore",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "discord-player-plus": "^2.0.1",
    "discord.js": "^14.13.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^18.18.3",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^7.2.0",
    "typescript": "~5.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.ts": "eslint --fix --ignore-path .gitignore"
  }
}
